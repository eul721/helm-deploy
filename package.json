{
  "name": "t2gp-publisher-service",
  "version": "1.0.0",
  "description": "T2GP Publisher Backend Services",
  "main": "dist/index.cjs.js",
  "src": "src/index.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build:dev": "rollup -c -w",
    "build": "rollup -c",
    "dev": "concurrently \"npm:build:dev\" \"npm:lint:dev\" \"npm:doc:dev\" \"python -m SimpleHTTPServer\"",
    "doc:dev": "nodemon --ignore docs/ -e ts --exec \"npm run doc\" --delay 1",
    "doc": "apidoc -i src/ -o docs/",
    "lint:dev": "nodemon --ignore dist/ -e ts --exec \"npm run lint\"",
    "lint": "eslint .",
    "precommit": "npm run build && npm run doc && npm run lint && npm run test",
    "serve": "node dist/index.cjs.js",
    "serve:dev": "nodemon -r dotenv/config --inspect dist/index.cjs.js --delay 2",
    "test:dev": "jest --watch --verbose",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage=true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/take-two-t2gp/t2gp-publisher-service.git"
  },
  "bugs": {
    "url": "https://github.com/take-two-t2gp/t2gp-publisher-service/issues"
  },
  "homepage": "https://github.com/take-two-t2gp/t2gp-publisher-service#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@take-two-t2gp/eslint-config-t2gp": "^6.0.1",
    "@types/async-retry": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.28",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/md5": "^2.3.0",
    "apidoc": "^0.25.0",
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.4",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-copy": "^3.4.0",
    "sqlite3": "^5.0.2",
    "stylelint": "^13.8.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@take-two-t2gp/t2gp-node-toolkit": "^1.12.0",
    "async-retry": "^1.3.1",
    "md5": "^2.3.0",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.5.3",
    "nanoid": "^3.1.20",
    "sequelize": "^6.5.0",
    "uuid": "^8.3.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
